@model User


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
   
    <!-- Custom styles -->
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>

    <!-- Main Content -->
    <div class="container-fluid">
        <!-- Page Title -->
        <div class="row mt-3">
            <div class="col-12">
                <h1 class="text-center">User Profile</h1>
            </div>
        </div>


        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div class="row mt-3">
                <div class="col-md-4 mx-auto">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <img src="@Url.Content(Model.ImagePath)" alt="Profil Resmi" class="avatar-lg rounded-circle mb-3" />
                            <h5 class="card-title mb-1">@Model?.UserName</h5>
                            <p class="card-text text-muted">@Model.Jobs</p>
                            <p class="card-text text-muted">Merhaba ben @Model.UserName! İstanbul Medipol Üniversitesi Yönetim Bilişim Sistemleri mezunuyum.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Profile Card -->
        

        <!-- User Information -->
        <div class="row mt-3">
            <div class="col-md-10 mx-auto">
                <div class="card border-4 shadow-sm">
                    <div class="card-body">
                        <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#about" role="tab">
                                    <i class="bx bx-user-circle font-size-20"></i>
                                    <span class="d-none d-sm-block">Kişisel Bilgiler</span>
                                </a>
                            </li>
                        </ul>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 30%;">Kullanıcı Adı</th>
                                        <td>@Model?.UserName </td>
                                    </tr>
                                    <tr>
                                        <th>E-mail</th>
                                        <td>@Model?.Email</td>

                                    </tr>
                                    <tr>
                                        <th style="width: 30%;">Meslek Bilgileri</th>
                                        <td>@Model?.Jobs </td>
                                    </tr>
                                    <tr>
                                        <th>Yaş</th>
                                        <td>@Model?.Age</td>

                                    </tr>
                                    <tr>
                                        <th style="width: 30%;"><a href="https://www.instagram.com/kullaniciadi" target="_blank"><i class="fab fa-instagram"></i></a> Instagram</th>
                                        <td>@Model.Instagram</td>
                                    </tr>
                                    <tr>
                                        <th><a href="https://www.linkedin.com/in/kullaniciadi" target="_blank"><i class="fab fa-linkedin"></i></a> linked-in</th>
                                        <td><small>@Model.Linkedin</td>

                                    </tr>
                                    <tr>
                                        <th style="width: 50%;"><a href="https://github.com/kullaniciadi" target="_blank"><i class="fab fa-github"></i></a> Github</th>
                                        <td>@Model.Github</td>
                                    </tr>    
                                    <tr>
                                        <th>Şifre</th>
                                        <td>@(new String('•', 8))</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="UploadImage" asp-controller="" method="post" enctype="multipart/form-data">

        </form>
       
        <!-- File Upload Section -->
        @using (Html.BeginForm("Profile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class=container-fluid mt-4>
                <form asp-action="UploadImage" enctype="multipart/form-data" method="POST">
                    <h2 class="text-center lead"></h2>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Profil Resmini Değiştir</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" class="btn btn-success btn-sm w-25" value="Resim Yükle" />
                    </div>
                </form>
                <div 
                    style="height: 100px;">
                </div>
            </div>
        }
        
    </div>


    <!-- End Main Content -->
    <!-- Bootstrap Bundle with Popper -->  
</body>
</html>
